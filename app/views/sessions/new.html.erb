<h2>ログイン</h2>
<% flash.each do |message_type, message| %>
  <div class="flash"><%= message %></div>
<% end %>
<%= form_for(@user, url: login_path) do |f| %>
  <%= f.label :email %><br>
  <%= f.email_field :email %><br>
  <%= f.label :password %><br>
  <%= f.password_field :password %><br>
  <%= f.submit %>
<% end %>