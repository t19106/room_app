<%= form_for @user do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.label "現在のパスワード" %>
  <%= f.password_field :password_now %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <%= f.file_field :avatar %>
  <%= f.submit %>
<% end %>