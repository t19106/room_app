<h2>施設を登録する</h2>
<% flash.each do |message_type, message| %>
  <div class="flash"><%= message %></div>
<% end %>
<%= form_for(@room) do |f| %>
  <%= f.label :name %><br>
  <%= f.text_area :name, required: true %><br>
  <%= f.label :detail %><br>
  <%= f.text_area :detail, required: true %><br>
  <%= f.label :summary %><br>
  <%= f.text_area :summary %><br>
  <%= f.label :price %><br>
  <%= f.number_field :price, required: true %><br>
  <%= f.label :address %><br>
  <%= f.text_area :address, required: true %><br>
  <%= f.label :room_image %><br>
  <%= f.file_field :room_image %><br>
  <%= f.submit %>
<% end %>